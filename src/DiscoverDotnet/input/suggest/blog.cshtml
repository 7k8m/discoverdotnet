Title: Suggest A Blog
---
<suggest title="Blog" :fields="fields" url="https://github.com/daveaglick/discoverdotnet/new/master/input/data/blogs"></suggest>

@section Script {
    <script type="text/javascript">
        Vue.component('suggest', httpVueLoader('/components/suggest.vue'));

        Vue.mixin({
            data: function () {
                return {
                    fields: [
                        {
                            name: "Feed",
                            description: "<strong>Required.</strong> A URL to the feed for the blog (the format will be auto-detected).",
                            required: true
                        },
                        {
                            name: "Title",
                            description: "The title of the blog. If a feed was provided and this is omitted, the title will be taken from the feed."
                        },
                        {
                            name: "Website",
                            description: "The URL of the blog. If a feed was provided and this is omitted, the website will be taken from the feed."
                        },
                        {
                            name: "Image",
                            description: "A URL to an image or logo of the blog. This should be a secure <code>https</code> link."
                        },
                        {
                            name: "Description",
                            description: "The description of the blog. If a feed was provided and this is omitted, the description will be taken from the feed."
                        },
                        {
                            name: "Author",
                            description: "The author of the blog. If a feed was provided and this is omitted, the author will be taken from the feed."
                        },
                        {
                            name: "Language",
                            description: "The language the blog is written in. English will be assumed if no language is specified."
                        }
                    ]
                };
            }
        })
    </script>
}