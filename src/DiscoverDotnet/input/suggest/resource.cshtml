Title: Suggest A Resource
---
<suggest title="Resource" :fields="fields" url="https://github.com/daveaglick/discoverdotnet/new/master/input/data/resources"></suggest>

@section Script {
    <script type="text/javascript">
        Vue.mixin({
            data: function () {
                return {
                    fields: [
                        {
                            name: "Title",
                            description: "<strong>Required.</strong> The title of the resource.",
                            required: true
                        },
                        {
                            name: "Website",
                            description: "<strong>Required.</strong> The URL of the resource.",
                            required: true
                        },
                        {
                            name: "Description",
                            description: "A description of the resource."
                        },
                        {
                            name: "Image",
                            description: "A URL to an image or logo of the resource. This should be a secure <code>https</code> link."
                        },
                        {
                            name: "Tags",
                            description: "A list of tags for the resource. Care should be taken to use already existing tags where practical. Separate multiple tags with a comma.",
                            multiple: true
                        }
                    ]
                };
            }
        })
    </script>
}